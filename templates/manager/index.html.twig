{% extends 'base.html.twig' %}

{% block title %}
	Hello ManagerController!
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('manager') }}
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('manager') }}
{% endblock %}

{% block body %}

	<div
		class="container">
		<!-- header -->
		<nav class="navbar h1 bg-light mb-3">
			Puzzle Manager
		</nav>
		<p class="lead">Click each line to edit the puzzle.</p>

		<!-- contents -->
		<div class="container" id="puzzle_list">
			<div class="row my-1">
				<div class="col-3">
					ID
				</div>
				<div class="col-3">
					幅
				</div>
				<div class="col-3">
					高さ
				</div>
				<div class="col"></div>
			</div>
			{% for puzzle in puzzles %}
				<div class="row my-1">
					<div class="col-3">
						{{ puzzle.id }}
					</div>
					<div class="col-3">
						{{ puzzle.width }}
					</div>
					<div class="col-3">
						{{ puzzle.height }}
					</div>
					<div class="col action-cell">
						<a href="/manager/edit/{{ puzzle.id }}" , target="_blank">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-gear-fill" viewbox="0 0 16 16">
								<path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z"/>
							</svg>
						</a>
						<a href="/viewer/{{ puzzle.id }}" , target="_blank">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-up-right" viewbox="0 0 16 16">
								<path fill-rule="evenodd" d="M8.636 3.5a.5.5 0 0 0-.5-.5H1.5A1.5 1.5 0 0 0 0 4.5v10A1.5 1.5 0 0 0 1.5 16h10a1.5 1.5 0 0 0 1.5-1.5V7.864a.5.5 0 0 0-1 0V14.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5z"/>
								<path fill-rule="evenodd" d="M16 .5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h3.793L6.146 9.146a.5.5 0 1 0 .708.708L15 1.707V5.5a.5.5 0 0 0 1 0v-5z"/>
							</svg>
						</a>
					</div>
				</div>
			{% endfor %}

			<div class="row my-1">
				<div class="col add-cell">
                <button class="btn btn-primary btn-block">Add...</button>
                </div>
			</div>
		</div>
	</div>


{% endblock %}
